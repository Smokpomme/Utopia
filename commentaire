class Utilisateur:
    def __init__(self, nom_utilisateur):
        self.nom_utilisateur = nom_utilisateur
        self.articles_partages = []

    def partager_article(self, article, commentaire=None):
        article_partage = ArticlePartage(self, article, commentaire)
        self.articles_partages.append(article_partage)
        return article_partage

class Article:
    def __init__(self, titre, contenu):
        self.titre = titre
        self.contenu = contenu

class ArticlePartage:
    def __init__(self, auteur, article, commentaire=None):
        self.auteur = auteur
        self.article = article
        self.commentaire = commentaire

utilisateur1 = Utilisateur("")
utilisateur2 = Utilisateur("")

article1 = Article("")
article2 = Article()

article_partage1 = utilisateur1.partager_article(article1, "")
article_partage2 = utilisateur2.partager_article(article2, "")

print(f"{utilisateur1.nom_utilisateur} a partagé :")
print(f"Titre : {article_partage1.article.titre}")
print(f"Contenu : {article_partage1.article.contenu}")
if article_partage1.commentaire:
    print(f"Commentaire : {article_partage1.commentaire}")

print(f"{utilisateur2.nom_utilisateur} a partagé :")
print(f"Titre : {article_partage2.article.titre}")
print(f"Contenu : {article_partage2.article.contenu}")
if article_partage2.commentaire:
    print(f"Commentaire : {article_partage2.commentaire}")
