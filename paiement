class  Panier:
    def __init__(self):
        self.articles = []

    def ajouter_article(self, article):
        self.articles.append(article)

    def vider_panier(self):
        self.articles = []

    def calculer_total(self):
        total = 0
        for article in self.articles:
            total += article['prix']
        return total

class Article:
    def __init__(self, nom, prix):
        self.nom = nom
        self.prix = prix

panier = Panier()

while True:
    print("Options :")
    print("1. Ajouter un article au panier")
    print("2. Vider le panier")
    print("3. Afficher le panier")
    print("4. Passer à la caisse")
    print("5. Quitter")

    choix = input("Choisissez une option : ")

    if choix == '1':
        nom_article = input("Nom de l'article : ")
        prix_article = float(input("Prix de l'article : "))
        article = Article(nom_article, prix_article)
        panier.ajouter_article(article)
        print(f"{nom_article} a été ajouté au panier.")
    elif choix == '2':
        panier.vider_panier()
        print("Le panier a été vidé.")
    elif choix == '3':
        print("Contenu du panier :")
        for article in panier.articles:
            print(f"{article.nom}: ${article.prix}")
        print(f"Total du panier : ${panier.calculer_total()}")
    elif choix == '4':
        print("Options de paiement :")
        print("1. Carte de crédit")
        print("2. PayPal")
        option_paiement = input("Choisissez une option de paiement : ")
        if option_paiement == '1':
            print("Paiement par carte de crédit en cours...")
            # implémenter la logique de paiement par carte de crédit.
        elif option_paiement == '2':
            print("Paiement par PayPal en cours...")
            # implémenter la logique de paiement par PayPal.
        else:
            print("Option de paiement invalide.")
    elif choix == '5':
        break
    else:
        print("Option invalide. Veuillez choisir une option valide.")
